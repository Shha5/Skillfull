@using SkillfullWebUI.Models.AuthModels;
@model ChangePasswordModel

<h1 class="text-info">Change password</h1>
<form asp-controller="Auth" asp-action="ChangePassword" method="post" role="form">
    <h4>Change password</h4>
    <div class="alert-danger" name="ErrorMessage">@ViewBag.ErrorMessage</div>
    <hr />
    <div class="form-group">
        <label asp-for="Password" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmNewPassword" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmNewPassword" class="form-control" />
            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="offset-md-2 col-md-10">
            <button type="submit" class="btn btn-success">Sign up</button>
        </div>
    </div>
</form>
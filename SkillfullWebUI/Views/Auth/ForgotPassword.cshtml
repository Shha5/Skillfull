@using SkillfullWebUI.Models.AuthModels;
@model ForgotPasswordModel


<h1 class="text-info">Resend email confirmation</h1>
<form asp-controller="Auth" asp-action="ForgotPassword" method="post" role="form">
    <div class="alert-danger" name="ErrorMessage">@ViewBag.ErrorMessage</div>
    <hr/>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <div class="offset-md-2 col-md-10">
            <button type="submit" class="btn btn-success">Reset password</button>
        </div>
    </div>
    </form>

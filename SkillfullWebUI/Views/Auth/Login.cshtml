@using SkillfullWebUI.Models.AuthModels;
@model LoginModel

    <section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block  card-image" style="border-radius:  1rem 0 0 1rem;">
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <form asp-controller="Auth" asp-action="Login" method="post" role="form" novalidate>
                                    <input  name="returnUrl" value="@Context.Request.Headers.Referer" hidden />
                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <span class="h1 fw-bold mb-0">Login</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Welcome back!</h5>
                                    <div class="error-info">
                                    <span class="alert-danger">@ViewBag.ErrorMessage</span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <input type="email" asp-for="Email" class="form-control form-control-lg" />
                                        <label class="form-label">Email address</label>
                                        <div class="error-info alert-danger"><span asp-validation-for="Email"></span></div>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" asp-for="Password" class="form-control form-control-lg" />
                                        <label class="form-label">Password</label>
                                        <div class="error-info alert-danger"><span asp-validation-for="Password"></span></div>
                                        <div><a class="small text-muted" asp-controller="Auth" asp-action="ForgotPassword">Forgot password?</a></div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <div class="custom-checkbox">
                                                <label asp-for="RememberMe">
                                                    <input asp-for="RememberMe" />
                                                    @Html.DisplayNameFor(m => m.RememberMe)
                                                </label>
                                                <span><img class="tooltip-icon" src="~/assets/information.png" data-bs-toggle="tooltip" data-bs-placement="right" title="Clicking this will enable you to be logged in for 30 days. Otherwise, your session will last for 3 hours, after that time you will be asked to log in again. We advise against using this option if you are using a device which is not available to you only." /></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn auth-btn btn-lg btn-block" type="submit">Login</button>
                                    </div>

                                    
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Don't have an account? <a href="#!"
                                                                  style="color: #393f81;">Register here</a>
                                    </p>
                                    <a href="#!" class="small text-muted">Terms of use.</a>
                                    <a href="#!" class="small text-muted">Privacy policy</a>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
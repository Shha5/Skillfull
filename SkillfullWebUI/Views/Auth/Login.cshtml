@using SkillfullWebUI.Models.AuthModels;
@model LoginModel

<h1 class="text-info">Log in</h1>
<form asp-controller="Auth" asp-action="Login" method="post" role="form">
    <h4>Welcome back!</h4>
    <hr />
    <input asp-for="ReturnUrl" class="form-control"  hidden/>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <div class="custom-checkbox">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
                <span><img class="tooltip-icon" src="~/assets/information.png" data-bs-toggle="tooltip" data-bs-placement="right" title="Clicking this will enable you to be logged in for 30 days. Otherwise, your session will last for 3 hours, after that time you will be asked to log in again. We advise against using this option if you are using a device which is not available to you only." /></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="offset-md-2 col-md-10">
            <button type="submit" class="btn btn-success">Log in</button>
        </div>
    </div>
    <p>
        <a asp-action="Register">Don't have an account? Sign up'</a>
    </p>
    <p>
        <a asp-action="ForgotPassword">Forgot your password?</a>
    </p>
</form>
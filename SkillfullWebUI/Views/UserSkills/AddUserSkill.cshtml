@using SkillfullWebUI.Models.UserSkillsModels
@model AddUserSkillModel

<h1>Add skill</h1>
@ViewBag.SkillName
@ViewBag.ErrorMessage
<form asp-controller="UserSkills" asp-action="AddUserSkill" method="post" role="form">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="SkillId" hidden />
    <input asp-for="SkillName" hidden />
    <label>
        <input asp-for="SkillAssessmentId" type="radio" value="1" /> 1 - I don't know anything about it, but I want to track my progress in learning that!
    </label>
    <label>
        <input asp-for="SkillAssessmentId" type="radio" value="2" /> 2 - I know some theory, but I can't really use this in practice.
    </label>
    <label>
        <input asp-for="SkillAssessmentId" type="radio" value="3" /> 3 - I can utilize my knowledge about this in practice, but I still need some help from more experienced people
    </label>
    <label>
        <input asp-for="SkillAssessmentId" type="radio" value="4" /> 4 - I am confident in using this skill on my own
    </label>
    <label>
        <input asp-for="SkillAssessmentId" type="radio" value="5" /> 5 - I am an expert in this and I teach others
    </label>
    <div class="form-group">
        <div class="col-md-2">
            <button type="submit" class="btn btn-success form-control">Confirm</button>
        </div>
    </div>
</form>